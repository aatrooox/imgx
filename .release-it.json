{
  "plugins": {
    "release-it-pnpm": {},
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular",
        "types": [
          {
            "type": "feat",
            "section": "✨ 新功能"
          },
          {
            "type": "fix",
            "section": "🐛 Bug 修复"
          },
          {
            "type": "perf",
            "section": "⚡️ 性能优化"
          },
          {
            "type": "refactor",
            "section": "♻️ 重构"
          },
          {
            "type": "style",
            "section": "💄 样式"
          },
          {
            "type": "docs",
            "section": "📝 文档"
          },
          {
            "type": "test",
            "section": "✅ 测试"
          },
          {
            "type": "build",
            "section": "👷 构建"
          },
          {
            "type": "ci",
            "section": "🔧 CI配置"
          },
          {
            "type": "chore",
            "section": "🎫 其他更新"
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "${version}",
    "push": true
  }
}