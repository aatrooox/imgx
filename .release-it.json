{
  "plugins": {
    "release-it-pnpm": {},
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "${version}",
    "push": true
  }
}